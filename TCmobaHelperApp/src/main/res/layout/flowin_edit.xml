<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="#C8FFFFFF"
	android:layout_alignParentLeft="true"
	android:id="@+id/linearlayout_edit">

	<Button
		style="?android:attr/buttonStyleSmall"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="关闭"
		android:background="@drawable/button"
		android:textColor="#FF000000"
		android:id="@+id/btn_close"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="保存"
        android:background="@drawable/button"
        android:textColor="#FF000000"
        android:id="@+id/btn_save"/>

	<ScrollView
		android:layout_height="wrap_content"
		android:layout_width="match_parent">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="重置"
                android:background="@drawable/button"
                android:textColor="#FF000000"
                android:id="@+id/btn_reset"/>

			<Switch
				android:layout_height="32dp"
				android:layout_width="match_parent"
				android:id="@+id/switch_bgc"
				android:text="亮背景"
				android:checked="true"
				android:gravity="center"
				android:textColor="#FF000000"/>

			<Switch
				android:layout_height="32dp"
				android:layout_width="match_parent"
				android:id="@+id/switch_oval"
				android:text="椭圆"
				android:checked="true"
				android:gravity="center"
				android:textColor="#FF000000"/>

			<Spinner
				android:layout_height="32dp"
				android:layout_width="match_parent"
				android:id="@+id/spinner_circle"
				android:background="#90A8A8A8"/>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal"
				android:focusable="true"
				android:clickable="true"
				android:gravity="center"
				android:background="@drawable/button"
				android:id="@+id/linearlayout_color">

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="wrap_content"
					android:text="颜色："
					android:textColor="#FF000000"
					android:id="@+id/txt_0"/>

				<com.a4455jkjh.colorpicker.view.TestView
					android:layout_height="32dp"
					android:layout_width="50dp"
					android:id="@+id/tst_color"/>

			</LinearLayout>

			<Spinner
				android:layout_height="32dp"
				android:layout_width="match_parent"
				android:id="@+id/spinner_tblr"
				android:background="#90A8A8A8"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="match_parent"
				android:gravity="center"
				android:id="@+id/txt_value"
				android:textColor="#FF000000"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"/>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal"
				android:gravity="center">

				<Button
					style="?android:attr/buttonStyleSmall"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="-1"
					android:background="@drawable/button"
					android:textColor="#FF000000"
					android:id="@+id/btn_sub1"
					android:layout_weight="1"/>

				<Button
					style="?android:attr/buttonStyleSmall"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="+1"
					android:background="@drawable/button"
					android:textColor="#FF000000"
					android:layout_weight="1"
					android:id="@+id/btn_add1"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal"
				android:gravity="center">

				<Button
					style="?android:attr/buttonStyleSmall"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="-10"
					android:background="@drawable/button"
					android:textColor="#FF000000"
					android:layout_weight="1"
					android:id="@+id/btn_sub10"/>

				<Button
					style="?android:attr/buttonStyleSmall"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="+10"
					android:background="@drawable/button"
					android:textColor="#FF000000"
					android:layout_weight="1"
					android:id="@+id/btn_add10"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal"
				android:gravity="center">

				<Button
					style="?android:attr/buttonStyleSmall"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="-100"
					android:background="@drawable/button"
					android:textColor="#FF000000"
					android:layout_weight="1"
					android:id="@+id/btn_sub100"/>

				<Button
					style="?android:attr/buttonStyleSmall"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="+100"
					android:background="@drawable/button"
					android:textColor="#FF000000"
					android:layout_weight="1"
					android:id="@+id/btn_add100"/>

			</LinearLayout>

		</LinearLayout>

	</ScrollView>

</LinearLayout>

